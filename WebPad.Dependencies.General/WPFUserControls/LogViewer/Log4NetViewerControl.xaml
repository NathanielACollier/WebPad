<UserControl x:Class="WebPad.Dependencies.General.WPFUserControls.LogViewer.Log4NetViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebPad.Dependencies.General.WPFUserControls.LogViewer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Content="Export" Name="ExportLogButton" Margin="5,0" Click="ExportLogButton_Click" />
            <Button Content="Clear" Name="ClearLogButton" Margin="5,0" Click="ClearLogButton_Click" />
        </StackPanel>
        <local:LogViewerControl x:Name="logViewerCtrl" DockPanel.Dock="Top" />
    </DockPanel>
</UserControl>
