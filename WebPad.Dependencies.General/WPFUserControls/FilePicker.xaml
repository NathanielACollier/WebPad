<UserControl x:Class="WebPad.Dependencies.General.WPFUserControls.FilePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebPad.Dependencies.General.WPFUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <DockPanel>
        <Button x:Name="PickFileButton" DockPanel.Dock="Left" Click="PickFileButton_Click">...</Button>
        <TextBox IsReadOnly="True" ToolTip="{Binding ElementName=filePickerNCUserControl, Path=FilePath}" Text="{Binding ElementName=filePickerNCUserControl, Path=FilePath}" />
    </DockPanel>
</UserControl>
